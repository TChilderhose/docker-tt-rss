#!/usr/bin/with-contenv bash

echo "Pulling latest";
git -C /app/www/public pull

export CI_COMMIT_BRANCH=$(git -C /app/www/public rev-parse --abbrev-ref HEAD)
export CI_COMMIT_SHA=$(git -C /app/www/public rev-parse HEAD)
export CI_COMMIT_SHORT_SHA=$(git -C /app/www/public rev-parse --short HEAD)
export CI_COMMIT_TIMESTAMP=$(git -C /app/www/public log -1 --format="%at" | xargs -I{} date -d @{} +%FT%T)

echo "Pulling Done";
